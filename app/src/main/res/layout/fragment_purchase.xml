<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.07"
            android:src="@drawable/mfurniture"
            android:id="@+id/mimg"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/mimg"
            app:layout_constraintRight_toRightOf="@id/mimg"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/viewbtn"
            app:cardBackgroundColor="@color/flipkartBlue"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"

                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/d3"
                    android:src="@drawable/d3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View in 3D"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@+id/d3"
                    app:layout_constraintBottom_toBottomOf="@id/d3"
                    app:layout_constraintLeft_toRightOf="@id/d3"
                    app:layout_constraintRight_toRightOf="parent"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:id="@+id/viewin3d"
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintTop_toTopOf="@+id/mimg"
            app:layout_constraintRight_toRightOf="@id/mimg"
            android:layout_margin="10dp"
            android:id="@+id/fav"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="13dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/heart"
                    android:alpha="0.3"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintTop_toBottomOf="@+id/fav"
            app:layout_constraintRight_toRightOf="@id/mimg"
            android:layout_margin="10dp"
            android:id="@+id/share"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="13dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/share"
                    android:alpha="0.3"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dots"
            android:padding="5dp"
            android:alpha="0.3"
            app:layout_constraintTop_toBottomOf="@id/mimg"
            app:layout_constraintLeft_toLeftOf="@id/mimg"
            app:layout_constraintRight_toRightOf="@id/mimg"
            android:id="@+id/dots"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepperfly"
            android:textAllCaps="true"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/dots"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            android:id="@+id/companyName"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pepperfly Furniture Fabric 3 + 1 + 1 Sofa Set (Natural Fabric , DIY (Do-It-Yourself))..."
            app:layout_constraintTop_toBottomOf="@id/companyName"
            app:layout_constraintLeft_toLeftOf="@id/companyName"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:alpha="0.4"
            android:maxLines="2"
            android:id="@+id/itemName"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            app:layout_constraintLeft_toLeftOf="@id/itemName"
            app:layout_constraintTop_toBottomOf="@id/itemName"
            android:id="@+id/rating"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:padding="5dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:padding="5dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:padding="5dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:padding="5dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/star"
                android:padding="5dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very Good | 18,054 rating"
            android:id="@+id/condition_rating"
            app:layout_constraintTop_toTopOf="@+id/rating"
            app:layout_constraintBottom_toBottomOf="@id/rating"
            app:layout_constraintLeft_toRightOf="@id/rating"
            android:textSize="14sp"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/rating"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="10dp"
            android:id="@+id/price"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#03FF08"
                    android:alpha="0.2"
                    android:elevation="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special price"
                    android:textColor="#227802"
                    android:textSize="14sp"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="5dp"
                    android:id="@+id/spprize"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33,459"
                    android:textColor="@color/black"
                    android:elevation="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/spprize"
                    android:layout_margin="5dp"
                    android:id="@+id/oldprize"
                    android:alpha="0.4"
                    />
                <View
                    android:layout_width="0dp"
                    android:alpha="0.4"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toTopOf="@id/oldprize"
                    app:layout_constraintLeft_toLeftOf="@id/oldprize"
                    app:layout_constraintRight_toRightOf="@id/oldprize"
                    app:layout_constraintBottom_toBottomOf="@id/oldprize"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 31,259"
                    android:textColor="#000000"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/newprize"
                    app:layout_constraintTop_toTopOf="@id/oldprize"
                    app:layout_constraintBottom_toBottomOf="@id/oldprize"
                    app:layout_constraintLeft_toRightOf="@id/oldprize"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25% off"
                    android:textColor="#227802"
                    android:textSize="20sp"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="@id/newprize"
                    app:layout_constraintBottom_toBottomOf="@id/newprize"
                    app:layout_constraintLeft_toRightOf="@id/newprize"
                    android:id="@+id/percentDiscount"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FREE Delivery"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            app:layout_constraintTop_toBottomOf="@+id/price"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/price"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:id="@+id/delivery"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#5C5B5B"
            app:layout_constraintTop_toBottomOf="@id/delivery"
            android:layout_marginTop="10dp"
            android:alpha="0.2"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:elevation="5dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Add to Cart"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:autoSizeTextType="uniform"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@color/buycolor"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Buy Now"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:textAllCaps="true"
                        android:autoSizeTextType="uniform"
                        />
                </RelativeLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>